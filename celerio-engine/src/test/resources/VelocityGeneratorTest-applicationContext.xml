<?xml version="1.0" encoding="UTF-8"?>
<beans default-lazy-init="true" xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd

            http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <!-- injected into packLoader thanks to @Autowired -->
    <util:list id="localPacks" list-class="java.util.List" value-type="com.jaxio.celerio.template.pack.TemplatePack">
        <ref local="encodingPack"/>
    </util:list>

    <bean id="encodingPack" class="com.jaxio.celerio.template.pack.LocalResourcePackFile">
        <constructor-arg value="#{systemProperties['user.dir']}/src/test/resources/encodingpack"/>
    </bean>
</beans>